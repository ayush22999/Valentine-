<script>
/* EDIT HER NAME */
const girlName = "My Love";
document.getElementById("name").innerText = girlName;

/* Typing Effect */
const text = `From the moment you came into my life,
everything felt softer‚Ä¶ warmer‚Ä¶ real.
This little website is my way of saying
you matter to me more than words ever could.`;
let index = 0;
function typeEffect() {
    if (index < text.length) {
        document.getElementById("typing").innerHTML += text.charAt(index);
        index++;
        setTimeout(typeEffect, 40);
    }
}
typeEffect();

/* Countdown */
const valentine = new Date("February 14, 2026 00:00:00").getTime();
setInterval(() => {
    const now = new Date().getTime();
    const diff = valentine - now;
    const days = Math.floor(diff / (1000 * 60 * 60 * 24));
    document.getElementById("countdown").innerText =
        days > 0 ? `${days} days left ‚ù§Ô∏è` : "Happy Valentine‚Äôs Day üíñ";
}, 1000);

/* Proposal Buttons */
function yesClick() {
    alert("You just made me the happiest person alive ‚ù§Ô∏è");
}

function moveNo() {
    const btn = event.target;
    btn.style.position = "absolute";
    btn.style.left = Math.random() * 80 + "%";
    btn.style.top = Math.random() * 80 + "%";
}

/* Floating Hearts */
setInterval(() => {
    const heart = document.createElement("div");
    heart.className = "heart";
    heart.innerHTML = "‚ù§Ô∏è";
    heart.style.left = Math.random() * 100 + "vw";
    heart.style.fontSize = (Math.random() * 20 + 15) + "px";
    document.body.appendChild(heart);
    setTimeout(() => heart.remove(), 6000);
}, 400);
</script>

